{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{ bg }}')">{{ title }}</section>
<h2>{{ title }} para adoção</h2>
{{/banner}}
<div class="container list">

{{#listPets}}
    <div class="item">
        <img src="images/{{ image }}" class="item--image" />
        <div class="item--name">{{ name }}</div>
        <div class="item--color">Cor: {{ color }}</div>
        <div class="item--genre">Gênero: {{ sex }}</div>
    </div>
{{/listPets}}
</div>

{{^listPets}}
    <div class="container no-list">
        <h2>Não temos nenhum animal com esse nome</h2>
    </div>
{{/listPets}}

{{>partials/footer}}